<?xml version='1.0' encoding='UTF-8'?>
<!-- TEMPLATE: dies ein Template, alle Mineralien, Metalle oder Substanzen die dem Thema "mine" zugeordnet werden können, können dieses Modell verwenden. -->
<sld:StyledLayerDescriptor version="1.1.0" xsi:schemaLocation="http://www.opengis.net/sld http://schemas.opengis.net/sld/1.1.0/StyledLayerDescriptor.xsd" xmlns:sld="http://www.opengis.net/sld" xmlns:ogc="http://www.opengis.net/ogc" xmlns:se="http://www.opengis.net/se" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <sld:NamedLayer>
    <se:Name>MR.Mine</se:Name>
      <sld:UserStyle>
      <se:Name>MR.Mine.Default</se:Name>
      <sld:IsDefault>1</sld:IsDefault>
      <se:FeatureTypeStyle version="1.1.0">
        <se:Description>
          <se:Title>Mine Default Style</se:Title>
          <se:Abstract></se:Abstract>
        </se:Description>
        <se:FeatureTypeName>Mine</se:FeatureTypeName>
        
        <!-- Polygon -->
        <se:Rule>
        <se:Description>
          <se:Title>mine: polygon</se:Title>
        </se:Description>
          <se:PolygonSymbolizer>
            <se:Geometry>
              <ogc:PropertyName>mr:geometry</ogc:PropertyName>
            </se:Geometry>
            <se:Fill>
              <se:SvgParameter name="fill">#...</se:SvgParameter>
            </se:Fill>
            <se:Stroke>
              <se:SvgParameter name="stroke">#...</se:SvgParameter>
              <se:SvgParameter name="stroke-width">...</se:SvgParameter>
            </se:Stroke>
          </se:PolygonSymbolizer>
        </se:Rule>
        <!-- Line -->
        <se:Rule>
        <se:Description>
          <se:Title>mine: line</se:Title>
        </se:Description>
          <se:LineSymbolizer>
            <se:Geometry>
              <ogc:PropertyName>mr:geometry</ogc:PropertyName>
            </se:Geometry>
            <se:Stroke>
              <se:SvgParameter name="stroke">#...</se:SvgParameter>
              <se:SvgParameter name="stroke-width">...</se:SvgParameter>
            </se:Stroke>
          </se:LineSymbolizer>
        </se:Rule>
        <!-- Point -->
        <se:Rule>
        <se:Description>
          <se:Title>mine: point</se:Title>
        </se:Description>
          <se:PointSymbolizer>
            <se:Geometry>
              <ogc:PropertyName>mr:geometry</ogc:PropertyName>
            </se:Geometry>
            <se:Graphic>
              <se:Mark>
                <se:WellKnownName>square/circle/cross/x/triangle</se:WellKnownName>
                <se:Fill>
                  <se:SvgParameter name="fill">#...</se:SvgParameter>
                </se:Fill>
                <se:Stroke>
                  <se:SvgParameter name="stroke">#...</se:SvgParameter>
                  <se:SvgParameter name="stroke-width">...</se:SvgParameter>
                </se:Stroke>
              </se:Mark>
              <se:Size>6</se:Size>
            </se:Graphic>
          </se:PointSymbolizer>
        </se:Rule>
        
      </se:FeatureTypeStyle>
    </sld:UserStyle>
  </sld:NamedLayer>
</sld:StyledLayerDescriptor>